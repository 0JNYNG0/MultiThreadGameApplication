<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameMap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEC3">

    <!--  Map  -->
    <LinearLayout
        android:id="@+id/floor1"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toTopOf="@id/floor2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:weightSum="9">

        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@drawable/sprite_01"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#959595"
            android:layout_width="0dp"
            android:layout_height="70dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/floor2"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@id/floor3"
        app:layout_constraintEnd_toEndOf="@id/floor1"
        app:layout_constraintStart_toStartOf="@id/floor1"
        app:layout_constraintTop_toBottomOf="@id/floor1"
        android:weightSum="9">

        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/floor3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@id/floor4"
        app:layout_constraintEnd_toEndOf="@id/floor2"
        app:layout_constraintStart_toStartOf="@id/floor2"
        app:layout_constraintTop_toBottomOf="@id/floor2"
        android:weightSum="9">

        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#EFC591"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/floor4"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/floor3"
        app:layout_constraintStart_toStartOf="@id/floor3"
        app:layout_constraintTop_toBottomOf="@id/floor3"
        android:weightSum="9">

        <ImageView
            android:layout_weight="2"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>

        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
        <ImageView
            android:layout_weight="1"
            android:background="#959595"
            android:layout_width="0dp"
            android:layout_height="70dp"/>
    </LinearLayout>

    <!--  Player  -->
    <ImageView
        android:id="@+id/player"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:drawable/btn_star_big_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--  Controller  -->
    <ImageView
        android:id="@+id/controller"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/controller"
        android:backgroundTint="#9F9F9F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/controllerBall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/controller_ball"
        android:backgroundTint="#404040"
        app:layout_constraintBottom_toBottomOf="@id/controller"
        app:layout_constraintEnd_toEndOf="@id/controller"
        app:layout_constraintStart_toStartOf="@id/controller"
        app:layout_constraintTop_toTopOf="@id/controller" />

    <!--  PickUp Button  -->
    <Button
        android:id="@+id/btn_pickUp"
        app:layout_constraintEnd_toStartOf="@id/btn_knife"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <!--  PickUp Button  -->
    <Button
        android:id="@+id/btn_knife"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_pickUp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>


    <!--  Recipe  -->
    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#E0CAFF"
        app:layout_constraintEnd_toStartOf="@id/timer_text"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--  Timer  -->
    <ImageView
        android:id="@+id/timer_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/hourglass"
        app:layout_constraintBottom_toBottomOf="@id/timer_text"
        app:layout_constraintStart_toEndOf="@id/timer_text"
        app:layout_constraintTop_toTopOf="@id/timer_text" />
    <TextView
        android:id="@+id/timer_text"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="#5769C8"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/score_text"
        app:layout_constraintStart_toEndOf="@id/recipe_image"
        app:layout_constraintTop_toTopOf="parent" />
    <!--  Score  -->
    <ImageView
        android:id="@+id/score_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/coin"
        app:layout_constraintBottom_toBottomOf="@id/score_text"
        app:layout_constraintEnd_toStartOf="@id/score_text"
        app:layout_constraintTop_toTopOf="@id/score_text" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#5769C8"
        android:gravity="center"
        android:text="0000"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/timer_text"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>